@model IEnumerable<SinekliBakkal.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listeleme</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a href="/categoryEdit/@category.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/categoryDelete/@category.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
