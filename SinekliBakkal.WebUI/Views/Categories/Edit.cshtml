@model  SinekliBakkal.Entity.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Kategori Güncelleme</h2>

<form action="Edit" method="post">
    <div class="row">
        <div class="col-md-6">
            @Html.HiddenFor(z => z.Id)
            <div class="form-group">
                @Html.Label("Category Name")
                @Html.TextBoxFor(z => z.Name, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Category Description")
                @Html.TextAreaFor(z => z.Description, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</form>

