@model  SinekliBakkal.WebUI.Models.ProductViewModel


@{
    ViewBag.Title = "Add";
}

<h2>Ürün Ekleme Sayfası</h2>

<form action="Add" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Product Name")
                @Html.TextBoxFor(z => z.Product.Name, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Product Price")
                @Html.TextBoxFor(z => z.Product.Price, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Product Stock")
                @Html.TextBoxFor(z => z.Product.Stock, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Category")
                @Html.DropDownListFor(z=>z.Product.CategoryId,
               new SelectList(Model.Categories,"Id","Name"),
               "Seçiniz", new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</form>